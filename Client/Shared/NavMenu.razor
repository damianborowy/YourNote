<BSNavbar IsExpand="true" IsDark="true">
    <BSNavbarBrand>Your Note</BSNavbarBrand>
    <BSNavbarToggler @onclick="onclick" />
    <BSCollapse isOpen="@IsOpen" IsNavbar="true" IsOpenChanged="OpenChanged">
        <BSNav IsList="true" Class="ml-auto" IsNavbar="true">
            <LoginDisplay />
        </BSNav>
    </BSCollapse>
</BSNavbar>

@code {
    bool IsOpen { get; set; } = false;

    void onclick(MouseEventArgs e)
    {
        IsOpen = !IsOpen;
        StateHasChanged();
    }

    void OpenChanged(bool e)
    {
        IsOpen = e;
        StateHasChanged();
    }
}