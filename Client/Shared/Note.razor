
<BSCard Color="@GetColorAsEnum()">
    <BSCard CardType="CardType.Header">
        @Title
    </BSCard>
    <BSCard CardType="CardType.Body">
        <BSCard CardType="CardType.Text">
            @ChildContent
        </BSCard>
    </BSCard>
</BSCard>

<BSModal IsCentered="true">
    <BSModalHeader>
        @Title
    </BSModalHeader>
    <BSModalBody>
        @ChildContent
    </BSModalBody>
    <BSModalFooter>
        <BSButton Color="BlazorStrap.Color.Primary">Some button</BSButton>
        <BSButton Color="BlazorStrap.Color.Secondary">Some other button</BSButton>
    </BSModalFooter>
</BSModal>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public int Color { get; set; } = 3;

    public BlazorStrap.Color GetColorAsEnum()
    {
        return (BlazorStrap.Color)Color;
    }
}